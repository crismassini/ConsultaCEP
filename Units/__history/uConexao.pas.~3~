unit uConexao;

interface

uses
  FireDAC.Stan.Intf, FireDAC.Stan.Option, FireDAC.Stan.Error, FireDAC.UI.Intf, FireDAC.Phys.Intf, FireDAC.Stan.Def,
  FireDAC.Stan.Pool, FireDAC.Stan.Async, FireDAC.Phys, Data.DB, FireDAC.Comp.Client, FireDAC.Phys.MySQLDef,
  FireDAC.Phys.FB, System.SysUtils, FireDAC.DApt, FireDAC.VCLUI.Wait, FireDAC.Phys.MSSQL;

type
  TConexao = class
  private
    FConn: TFDConnection;
    FDPhysMSSQLDriverLink1: TFDPhysMSSQLDriverLink;

    procedure ConfigurarConexao;
  public
    constructor Create;
    destructor Destroy; override;

    function GetConn: TFDConnection;
    function CriarQuery: TFDQuery;
  end;

implementation

{ TConexao }

procedure TConexao.ConfigurarConexao;
begin
//  FConn.DriverName := 'MSSQL';
  FConn.Params.DriverID := 'MSSQL';
  FConn.Params.Database := 'SoftPlanBase';
  FConn.Params.UserName := 'sa';
  FConn.Params.Password := 'Cris@2024';
  FConn.LoginPrompt     := False;
  FConn.Params.Values['Database'] := 'localhost';

  FDPhysMSSQLDriverLink1.BaseDriverID := FConn.Params.DriverID;
  FDPhysMSSQLDriverLink1.ODBCDriver := 'SQL Server';
end;

constructor TConexao.Create;
begin
  FConn := TFDConnection.Create(nil);
  FDPhysMSSQLDriverLink1 := TFDPhysMSSQLDriverLink.Create(nil);

  Self.ConfigurarConexao();
end;

function TConexao.CriarQuery: TFDQuery;
var
  VQuery: TFDQuery;
begin
  VQuery := TFDQuery.Create(nil);
  VQuery.Connection := FConn;

  Result := VQuery;
end;

destructor TConexao.Destroy;
begin
  FConn.Free;
  FDPhysMSSQLDriverLink1.Free;

  inherited;
end;

function TConexao.GetConn: TFDConnection;
begin
  Result := FConn;
end;

end.
